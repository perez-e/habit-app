<div class="modal fade trash" id="trash-{{id}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-id='{{id}}'>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close close-modal" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Are you sure?</h4>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button data-id="{{id}}" type="button" class="btn btn-danger trash-post" data-dismiss="modal">Yes</button>
        <button data-id="{{id}}" type="button" class="btn btn-default close-modal" data-dismiss="modal">No</button>
      </div>
    </div>
  </div>
</div>