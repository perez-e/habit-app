<% unless instance.errors.nil? || instance.errors.empty? %>
  <div class="alert alert-danger alert-margin">
    <strong>Whoops! Make <%= pluralize(instance.errors.count, "change")%>:</strong>
    <ul>
      <% instance.errors.keys.each do |key| %>
        <li><%= instance.errors[key].first %></li>
      <% end %>
    </ul>
  </div>
<% end %>