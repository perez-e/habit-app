  <div class="section-head">
      <h2 class="center-text">Profile</h2>
  </div>
          
          <div class="pic">
            <% if @profile.profile_pic.nil? %>
              <div class="first-event">
                <p>I'm shy</p>
              </div>
            <% else %>
              <div class="photo">
                <%= image_tag @profile.profile_pic.url(:square) %>
              </div>
            <% end %>
          </div>

          <div class="blue-top">
            <h1><%= @current_user.first_name %> <%= @current_user.last_name %></h1><br>
            <h3>
              <% unless @profile.tagline.nil? %>
                <%= @profile.tagline %></h3>
              <% end %>
          </div>

          <div id="stats" class="right">
            <h2>
              <% if @current_user.habits.count.nil? %>
                <%= No %>
              <% else %> 
                <%= @current_user.habits.count %>
              <% end %>
              Habits
              <%= render "habits/add_habit" %>
            </h2><br>
            <h2>
              [POINTS GO HERE] Points
            </h2>
          </div>