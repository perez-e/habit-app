<div class="container">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div><%= f.label "First Name" %><br>
    <%= f.text_field :first_name %></div>

    <div><%= f.label "Last Name" %><br>
    <%= f.text_field :last_name %></div>

    <div><%= f.label "Phone Number (optional)" %><br>
    <%= f.telephone_field :phone_number %></div>

    <div><%= f.label :email %><br>
    <%= f.email_field :email, :autofocus => true %></div>

    <div><%= f.label :password %><br>
    <%= f.password_field :password %></div>

    <div><%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %></div><br>

    <div><%= f.submit "Sign up", :class => "btn btn-primary" %></div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>