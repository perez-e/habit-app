<%= form_for @habit do |f| %>
  <div class="row">
    <div class="col-sm-6 col-xs-12">
      <%= f.text_field :name, :autofocus => true, class: "form-control", placeholder:"Title your habit" %>
    </div>
  </div>
  <%#= f.label :category %>
  <%#= f.text_field :category, class: "form-control" %>
  <!-- <br> -->
  <div class="row form-row">
    <div class="col-sm-2 col-xs-4">
      <%= f.select(:frequency, [1,2,3,4,5,6,7], {}, { :class => 'form-control input-sm' }) %>
    </div>
    <div class="col-sm-10 col-xs-8 bottom">
      <p>days per week</p>
    </div>
  </div>
  <br>
  <%#= f.label :visibility %>
  <%#= f.text_field :visibility, class: "form-control" %>
  <!-- <br> -->
  <%= f.submit class: "btn btn-primary" %>
<% end %>
