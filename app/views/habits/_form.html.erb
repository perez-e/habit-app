<%= form_for @habit do |f| %>
  <%= f.error_messages %>
  <div class="row form-row">
    <div class="col-sm-6 col-xs-12">
      <%= f.text_field :name, :autofocus => true, class: "form-control", placeholder:"Title your habit" %>
    </div>
  </div>
  <div class="row form-row inline-row">
    <div class="col-sm-2 col-xs-4">
      <%= f.text_field :frequency, class: "form-control", placeholder:"3" %>
    </div>
    <div class="col-sm-10 col-xs-8">
      days per <span class="inline-label">
            <%= f.radio_button(:timeframe, "week", checked: true) %>
            <%= f.label(:timeframe_week, "Week") %>
          </span>
          <span class="inline-label">
            <%= f.radio_button(:timeframe, "month") %>
            <%= f.label(:timeframe_month, "Month") %>
          </span>
    </div>
  </div>
  <div class="row form-row">
    <div class="col-xs-12">
        <%= f.radio_button(:visibility, "public", checked: true) %>
        <%= f.label(:visibility_public, "Public") %>
      <span class="inline-label">
        <%= f.radio_button(:visibility, "private") %>
        <%= f.label(:visibility_private, "Private") %>
      </span>
    </div>
  </div>
  <div class="form-row">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
