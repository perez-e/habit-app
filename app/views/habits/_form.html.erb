<%= form_for @habit do |f| %>

  <div class="row">
    <div class="col-sm-6 col-xs-12">
      <%= f.text_field :name, :autofocus => true, class: "form-control", placeholder:"Title your habit" %>
    </div>
  </div>
  <%#= f.label :category %>
  <%#= f.text_field :category, class: "form-control" %>
  <!-- <br> -->
  <div class="row form-row">
    <div class="col-sm-2 col-xs-4">
      <%= f.select(:frequency, [1,2,3,4,5,6,7], {}, { :class => 'form-control input-sm' }) %>
    </div>
    <div class="col-sm-10 col-xs-8 bottom">
      <p>days per</p>
        <%= radio_button_tag(:timeframe, "week") %>
        <%= label_tag(:timeframe_week, "Week") %>
        <%= radio_button_tag(:timeframe, "month") %>
        <%= label_tag(:timeframe_month, "Month") %>
    </div>
  </div>
  <br>
    <%= radio_button_tag(:visibility, "public") %>
    <%= label_tag(:visibility_public, "Public") %>
    <%= radio_button_tag(:visibility, "private") %>
    <%= label_tag(:visibility_private, "Private") %>
  <br>
  <%#= f.label :visibility %>
  <%#= f.text_field :visibility, class: "form-control" %>
  <!-- <br> -->

  <%= f.submit class: "btn btn-primary" %>
<% end %>
