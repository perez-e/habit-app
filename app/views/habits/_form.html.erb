<%= form_for @habit do |f| %>
  <div class="row form-row">
    <div class="col-sm-6 col-xs-12">
      <%= f.text_field :name, :autofocus => true, class: "form-control", placeholder:"Title your habit" %>
    </div>
  </div>
  <div class="row form-row">
    <div class="col-sm-2 col-xs-4">
      <%= f.select(:frequency, [1,2,3,4,5,6,7], {}, { :class => 'form-control input-sm span2' }) %>
    </div>
    <div class="col-sm-10 col-xs-8 bottom">
      <p>days per <span class="inline-label">
            <%= radio_button_tag(:timeframe, "week", true) %>
            <%= label_tag(:timeframe_week, "Week") %>
          </span>
          <span class="inline-label">
            <%= radio_button_tag(:timeframe, "month", false) %>
            <%= label_tag(:timeframe_month, "Month") %>
          </span>
      </p>
    </div>
  </div>
  <div class="row form-row">
    <div class="col-xs-12 bottom">
        <%= radio_button_tag(:visibility, "public", true) %>
        <%= label_tag(:visibility_public, "Public") %>
      <span class="inline-label">
        <%= radio_button_tag(:visibility, "private", false) %>
        <%= label_tag(:visibility_private, "Private") %>
      </span>
    </div>
  </div>
  <div class="form-row">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
