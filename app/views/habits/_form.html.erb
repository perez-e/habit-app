<%= form_for @habit do |f| %>
  <%= f.label("What would you like to do?") %>
  <%= f.text_field :name, :autofocus => true %>
  <br>

  <%= f.label :"How Often?" %>
  <%= f.text_field :frequency %>
  <br>
  <%= f.label :"Per" %>
  <%= radio_button_tag(:timeframe, "week") %>
  <%= label_tag(:timeframe_week, "Week") %>
  <%= radio_button_tag(:timeframe, "month") %>
  <%= label_tag(:timeframe_month, "Month") %>

  <br>
  <%= radio_button_tag(:visibility, "public") %>
  <%= label_tag(:visibility_public, "Public") %>
  <%= radio_button_tag(:visibility, "private") %>
  <%= label_tag(:visibility_private, "Private") %>
  <br>
  <p><p>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
