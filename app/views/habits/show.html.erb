<h1 class="center-text">Woooo!</h1>

<button type="button" class="btn btn-default right">Join</button>
<button type="button" class="btn btn-default right clear-right">Invite<br />More!</button>

<h2><%= @habit.name %></h2>
<h3><%= @habit.frequency %>X per week</h3>

<h2>Public</h2>

<div class="underline" data-month='<%= DateTime.now.beginning_of_week()-1  %>'>
  <button type="button" class="btn btn-default right">SMS Reminders</button>
  <% date = DateTime.now.beginning_of_week - 1 %>
  <h4 class="center-text"><%= date.strftime('Week of %-m/%-d/%Y') %></h4>
</div>

<ul class="nav nav-pills center-text" data-name="<%= @habit.name %>">
  <li class="<%=  "active"  if date.cwday == DateTime.now.cwday  %>" data-day="<%= date.to_s %>"><a href="#">Sun</a></li>
  <li class="<%=  "active"  if (date+1).cwday == DateTime.now.cwday  %>" data-day="<%= (date+1).to_s %>"><a href="#">M</a></li>
  <li class="<%=  "active"  if (date+2).cwday == DateTime.now.cwday  %>" data-day="<%= (date+2).to_s %>"><a href="#">Tu</a></li>
  <li class="<%=  "active"  if (date+3).cwday == DateTime.now.cwday  %>" data-day="<%= (date+3).to_s %>"><a href="#">W</a></li>
  <li class="<%=  "active"  if (date+4).cwday == DateTime.now.cwday  %>" data-day="<%= (date+4).to_s %>"><a href="#">Th</a></li>
  <li class="<%=  "active"  if (date+5).cwday == DateTime.now.cwday  %>" data-day="<%= (date+5).to_s %>"><a href="#">F</a></li>
  <li class="<%=  "active"  if (date+6).cwday == DateTime.now.cwday  %>" data-day="<%= (date+1).to_s %>"><a href="#">Sat</a></li>
</ul>

<h4 class="center-text underline">Leaderboard</h4>
<div id="leaderboard" ></div>