<button type="button" class="btn btn-default right">Join</button>
<button type="button" class="btn btn-default right clear-right">Invite<br />More!</button>

<h2><%= @habit.name %></h2>
<h3><%= @habit.frequency %> days per week</h3>

<h2>Public</h2>

<%= render partial: 'section_head', locals: {title: 'week', actions:'reminders'} %>
<div class="habit-row">
  <ul class="nav nav-pills center-text" data-name="<%= @habit.name %>">
    <%= render partial: 'pill', locals: {completions: @completions, habit: @habit} %>
  </ul>
</div>

<%= render partial: 'section_head', locals: {title: 'leaderboard_title', actions: nil} %>


<div id="leaderboard">
  <div class="habit-row">
  <% current_user.friends.limit(3).each do |friend| %>
    <h3><%= "#{friend.first_name} #{friend.last_name}" %></h3>
  <% end %>
  </div>
</div>


<%= render partial: 'section_head', locals: {title: 'post_title', actions: nil} %>
<%= render 'post_area' %>
<div class="underline center-text">
  <h3>Posts</h3>
</div>

<textarea class="form-control" rows="3" data-name="<%= @habit.name %>" data-habit="<%= @habit.id %>"></textarea>
<button id="post" type="button" class="btn btn-default">Add!</button>

<div class="posts">
  <%= render partial: "post", collection: @posts %>
</div>
