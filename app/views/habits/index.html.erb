<%= render partial: 'section_head', locals: {title: 'week', actions:'add_habit'} %>
<% if @habits.first.nil? %>
  <a href="<%= new_habit_path %>"><div class="first-event">Add your first event</div></a>

<% else %>
  <div id="sortable">
    <% @habits.each do |h| %>
      <div class="habit-row ui-state-default" >
        <div class="color"></div>
        <div>
          <div class="col-xs-5">
            <h3 class="habit-title"><%= link_to h.name, habit_path(h.id) %></h3>
            <h5><%= h.frequency %>X per week</h5>
          </div>
          <div class="col-xs-7">
            &nbsp;
            <%#= render 'pills' %>
          </div>
        </div>
        <div class="col-xs-12">
          <ul class="pagination pagination-sm progress-ul center">
            <% complete_count = h.completions.where(
              status: true && h.created_at >= DateTime.now.beginning_of_week - 1 && h.created_at <= DateTime.now).count %>
            <% for i in 1..complete_count %>
               <li class="progress-li disabled"><%= i %></li>
            <% end %>
            <% for i in (complete_count + 1)..h.frequency %>
               <li class="progress-li active"><%= i %></li>
            <% end %>
          </ul>
        </div>

      </div>
    <% end %>
  </div>
<% end %>